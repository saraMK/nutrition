<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.latiff.nutrition.ui.nutrition.NutritionViewModel" />
    </data>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.nutrition.NutritionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        // callories
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.ENERC_KCAL}"
            />

        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.FAT}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.CHOLE}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.NA}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.CHOCDF}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.FIBTG}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.SUGAR}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.PROCNT}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.VITD}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.CA}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.K}"
            />
        <include layout="@layout/nutrition_item"
            app:model="@{viewModel.nutritionDetails.FE}"
            />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>
</layout>